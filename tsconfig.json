{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "lib": ["es6", "dom", "dom.iterable"],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "src/public/js/Workers/*",
    "node_modules/**"
  ]
}