{
  "name": "web-marketplaces",
  "version": "1.0.0",
  "description": "Web marketplaces",
  "main": "index.js",
  "scripts": {
    "start": "concurrently -k -p \"[{name}]\" -n \"Client,Server,Node\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch:client\" \"npm run watch:server\" \"npm run server\"",
    "watch:client": "rollup -cw",
    "watch:server": "tsc -w -p tsconfig.server.json",
    "copy:html": "mkdir -p dist/server/views && cp -R src/server/views/* dist/server/views",
    "server": "DEBUG=app nodemon ./dist/server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "build:client": "rollup -c",
    "build:server": "cp ./package*.* ./dist/server && NODE_ENV=production tsc -p tsconfig.server.json",
    "build": "npm run lint && npm run build:client && npm run build:server",
    "cache:clear": "rm -rf dist/cache/*"
  },
  "repository": "git+https://github.com/SelfKeyFoundation/web-marketplaces.git",
  "author": "Andre Goncalves <andre@andregoncalves.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SelfKeyFoundation/web-marketplaces/issues"
  },
  "homepage": "https://github.com/SelfKeyFoundation/web-marketplaces#readme",
  "dependencies": {
    "airtable": "^0.8.1",
    "bottleneck": "^2.19.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.3",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.0",
    "preact": "^10.4.4",
    "preact-render-to-string": "^5.1.8",
    "route-cache": "^0.4.4",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.1.0",
    "eslint-config-preact": "^1.1.1",
    "eslint-plugin-react": "^7.20.0",
    "nodemon": "^2.0.4",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.10.9",
    "rollup-plugin-postcss": "^3.1.1",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  }
}
